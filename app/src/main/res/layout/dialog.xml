<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300sp"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    >

    <ImageView
        android:id="@+id/dialog_img"
        android:src="@drawable/clear"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="10sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmodtempor incididunt ut labore et."
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textSize="1sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/dialog_twitter"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/bluetwitter"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="2sp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            />

        <ImageView
            android:id="@+id/dialog_bookmark"
            android:src="@drawable/ic_bookmark_border_black_18dp"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            />



    </LinearLayout>



</LinearLayout>